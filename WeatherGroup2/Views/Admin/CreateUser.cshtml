@model WeatherGroup2.ViewModels.AccountViewModels.UserViewModel

<div class="row mt-4">
    <div class="col-6 mx-auto">
        <div class="card">
            <div class="card-header text-white bg-dark mb-3">
                <h4>Register here</h4>
            </div>

            <div class="card-body">
                <div class="container">

                    <form asp-controller="Admin" asp-action="CreateUser" method="post">

                        <div asp-validation-summary="All" class="form-control-sm text-danger"></div>
                       

                        <div class="form-group">
                            <strong><label asp-for="Email" class="control-label">Username</label></strong>
                            <input type="email" asp-for="Email" class="form-control" placeholder="e-mail" />
                            <span asp-validation-for="Email" class="form-control-sm text-danger"></span>
                        </div>

                        <div class="form-group">
                            <strong><label asp-for="Password" class="control-label"></label></strong>
                            <input type="password" asp-for="Password" class="form-control" placeholder="password"/>
                            <span asp-validation-for="Password" class="form-control-sm text-danger"></span>
                        </div>

                        <div class="form-group">
                            <strong><label asp-for="VerifyPassword" class="control-label"></label></strong>
                            <input type="password" asp-for="VerifyPassword" class="form-control" placeholder="password" />
                            <span asp-validation-for="VerifyPassword" class="form-control-sm text-danger"></span>
                        </div>

                        <div class="row justify-content-end">
                            <div class="mr-md-3">
                                <div class="form-group">
                                    <input type="submit" value="Register" class="btn btn-success" />
                                </div>
                            </div>
                            <div class="mr-md-3">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">To Login</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>


