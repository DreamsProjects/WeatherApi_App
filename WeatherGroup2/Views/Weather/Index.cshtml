@model IEnumerable<WeatherGroup2.Models.Favorite>


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<a asp-controller="Weather" asp-action="ShowFavorites" name="">Show Favorites</a>

The data below will be saved in DB if click on ADD button

<div class="container">
    <div class="col-sm-9">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Location</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CityId</td>
                        <td>@item.CityName</td>
                        <td>@item.CountryName</td>
                        <td>
                            <a class="btn btn-secondary btn-sm"
                               asp-controller="Weather"
                               asp-action="SaveInFavorites"
                               asp-route-favoriteId="@item.CityId"
                               data-ajax="true"
                               data-ajax-method="get"
                               data-ajax-mode="replace"
                               data-ajax-update="#DivForFavoritesView">
                                SAVE
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="col-sm-3">
        <div class="container">
            Favorites
        </div>
        <div id="DivForFavoritesView">

        </div>
    </div>
</div>
